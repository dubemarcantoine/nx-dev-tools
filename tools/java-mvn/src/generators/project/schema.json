{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "Project",
  "title": "",
  "type": "object",
  "properties": {
    "projectType": {
      "description": "Type of project.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "type": "string",
      "x-prompt": {
        "message": "What kind of project are you generating?",
        "type": "list",
        "items": [
          {
            "value": "application",
            "label": "Application"
          },
          {
            "value": "library",
            "label": "Library"
          }
        ]
      },
      "x-priority": "important"
    },
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 1
      },
      "x-prompt": "What name would you like to use?"
    },
    "groupId": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 2
      },
      "x-prompt": "Group id of project to generate."
    },
    "artifactId": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 3
      },
      "x-prompt": "Artifact id of project to generate."
    },
    "version": {
      "type": "string",
      "description": "Version of the project.",
      "default": "1.0.0-SNAPSHOT",
      "alias": "v",
      "x-priority": "internal",
      "visible": false
    },
    "tags": {
      "type": "string",
      "description": "Add tags to the project (used for linting)",
      "alias": "t"
    },
    "directory": {
      "type": "string",
      "description": "A directory where the project is placed"
    }
  },
  "required": ["name", "projectType"]
}
